# 오봇 (O-Bot) - Opinion.trade 전용. 로컬에서 .env 로 복사 후 값을 채우세요.

# Opinion.trade API - 계정 1 (Wallet 1)
OPINION_API_KEY=your_opinion_api_key
OPINION_PROXY=IP:PORT:USER:PASS
OPINION_DEFAULT_EOA=0x...   # 정확한 지갑 주소 (0x + 40자 hex)

# 계정 2 (Wallet 2) - 별도 키·프록시. 모두 있으면 자동 로그인
OPINION_API_KEY_2=
OPINION_PROXY_2=IP:PORT:USER:PASS
OPINION_EOA_2=0x...   # 정확한 지갑 주소 (0x + 40자 hex)

# Opinion CLOB 주문 (자전거래 시 필요) - 계정별 PK·Multisig
# OPINION_CLOB_PK_1=0x...      # 계정1 지갑 private key (64자 hex, 0x 접두어 선택)
# OPINION_MULTISIG_1=0x...    # 계정1 Safe(Multisig) 주소
# OPINION_CLOB_PK_2=0x...
# OPINION_MULTISIG_2=0x...
# OPINION_CLOB_HOST=https://proxy.opinion.trade:8443
# BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Pyth Network (BTC 시세 - btc-price-gap 등)
PYTH_API_URL=https://hermes.pyth.network/api/latest_price_feeds
BTC_PRICE_FEED_ID=0xe62df6c8b4a85fe1a67db44dc12de5db330f7ac66b72dc658afedf0f4a415b43

# 거래 파라미터 (Opinion 수동/자동)
MIN_PRICE_GAP=200
TIME_BEFORE_END=300

# Flask
SECRET_KEY=your_secret_key_change_in_production
FLASK_ENV=development
FLASK_DEBUG=True

# USDT 잔액 조회 (선택): OKX Web3 API 키 있으면 OKX, 없으면 BSC RPC
